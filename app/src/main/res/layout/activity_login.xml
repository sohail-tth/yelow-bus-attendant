<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_bg_white"
    android:orientation="vertical">



    <ImageView
        android:id="@+id/ivHeading"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:scaleType="fitCenter"
        android:visibility="visible"
        android:src="@drawable/yelow_bus"/>

    <LinearLayout
        android:id="@+id/layoutBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/_10sdp"
        android:layout_gravity="bottom"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shadow_white_filled">
            <EditText
                android:id="@+id/edtMobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner_greydark_border"
                android:padding="@dimen/_8sdp"
                android:gravity="center_horizontal"
                android:inputType="phone"
                android:fontFamily="@font/arial2"
                android:textSize="@dimen/_18sdp"
                android:maxLength="10"
                android:hint="Enter Mobile Number"/>

        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@drawable/shadow_white_filled">
        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_greydark_border"
            android:padding="@dimen/_8sdp"
            android:inputType="textPassword"
            android:gravity="center_horizontal"
            android:fontFamily="@font/arial2"
            android:textSize="@dimen/_18sdp"
            android:hint="Enter Password"/>

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/btnSignUp"
                android:layout_width="0dp"
                android:paddingTop="10dp"
                android:paddingBottom="20dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:background="@drawable/shadow_white_filled"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="#000000"
                    android:fontFamily="@font/arial2"
                    android:textSize="@dimen/_16sdp"
                    android:layout_height="wrap_content"
                    android:text="Sign up" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0.1"/>
            <LinearLayout
                android:id="@+id/btnLogin"
                android:layout_width="0dp"
                android:paddingTop="10dp"
                android:paddingBottom="20dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:background="@drawable/shadow_white_filled"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content" android:textColor="#000000"
                    android:fontFamily="@font/arial2"
                    android:textSize="@dimen/_16sdp"
                    android:layout_height="wrap_content"
                    android:text="Login" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
