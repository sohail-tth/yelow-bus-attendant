<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.HelpFragment">

    <LinearLayout
        android:id="@+id/layoutTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/help"
            android:textColor="#454F63"
            android:textSize="@dimen/_40sdp"
            android:fontFamily="@font/gibson_regular"
            android:layout_margin="@dimen/_20sdp"/>

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:rotation="180"
            android:layout_margin="@dimen/_20sdp"/>
    </LinearLayout>



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/layoutTop"
            android:layout_above="@id/layoutBottom"
            android:src="@drawable/help_art"/>



    <LinearLayout
        android:id="@+id/layoutBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_greydark_border"
            android:backgroundTint="@color/grey"
            android:text="@string/call_our_executive"
            android:gravity="center"
            android:textSize="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:textColor="#0A1F44"
            android:fontFamily="@font/sf_medium"
            android:textStyle="bold"
            android:padding="@dimen/_8sdp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_greydark_border"
            android:backgroundTint="@color/yellow"
            android:text="@string/call_your_admin"
            android:gravity="center"
            android:textSize="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:textColor="#0A1F44"
            android:fontFamily="@font/sf_medium"
            android:textStyle="bold"
            android:padding="@dimen/_8sdp"/>

    </LinearLayout>






</RelativeLayout>