        <ImageView
            android:layout_width="@dimen/_300sdp"
            android:layout_height="@dimen/_300sdp"
            android:layout_centerHorizontal="true"
            android:scaleType="center"
            android:src="@drawable/art1"/>

    </RelativeLayout>

</RelativeLayout>