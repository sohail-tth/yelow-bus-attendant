<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.ReferEarnFragment">

    <LinearLayout
        android:id="@+id/layoutTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/_8sdp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/invite_frnds"
            android:fontFamily="@font/sf_medium"
            android:textStyle="bold"
            android:textSize="@dimen/_16sdp"
            android:textColor="#242A37"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:layout_marginRight="@dimen/_8sdp"
            android:rotation="180"/>

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_below="@id/layoutTop">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_120sdp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:padding="@dimen/_12sdp"
                android:background="@drawable/circular_corner"
                android:layout_marginTop="@dimen/_12sdp"
                android:backgroundTint="@color/yellow">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/teamwork"/>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/invite_frnds"
                android:fontFamily="@font/sf_medium"
                android:textSize="@dimen/_22sdp"
                android:textColor="#242E42"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_12sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:fontFamily="@font/sf_medium"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:textSize="@dimen/_22sdp"
                android:textColor="#242E42"
                android:text="@string/earn_upto"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/invite_frnds_msg"
                android:textSize="@dimen/_15sdp"
                android:textColor="#242E42"
                android:fontFamily="@font/sf_medium"/>

            <LinearLayout
                android:id="@+id/layoutBottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/share_ur_invite_code"
                    android:textAllCaps="true"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:fontFamily="@font/sf_semibold"
                    android:textSize="@dimen/_12sdp"/>

                <TextView
                    android:id="@+id/tvInviteCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="1991991"
                    android:background="@drawable/rounded_corner_grey_filled"
                    android:padding="@dimen/_8sdp"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:textSize="@dimen/_20sdp"
                    android:textStyle="bold"
                    android:fontFamily="@font/sf_medium"
                    android:textColor="#0A1F44"/>

                <TextView
                    android:id="@+id/tvInvite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/invite"
                    android:textAllCaps="true"
                    android:background="@drawable/rounded_corner_yellow_filled"
                    android:padding="@dimen/_12sdp"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:textSize="@dimen/_13sdp"
                    android:textStyle="bold"
                    android:fontFamily="@font/sf_medium"
                    android:textColor="#0A1F44"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>