<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    tools:openDrawer="end">

    <include
        layout="@layout/fragment_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:fitsSystemWindows="true"
        map:itemIconTint="@color/yellow">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    map:cardElevation="@dimen/_5sdp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/yellow"
                        android:padding="@dimen/_6sdp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/_70sdp"
                                    android:layout_weight="1"
                                    android:src="@drawable/prathamesh"/>

                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/_70sdp"
                                    android:layout_weight="1"
                                    android:src="@drawable/prathamesh"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textColor="#242A37"
                                    android:textSize="@dimen/_20sdp"
                                    android:gravity="center_horizontal"
                                    android:maxLines="1"
                                    android:fontFamily="@font/sf_semibold"
                                    android:ellipsize="end"
                                    android:text="Datta Ram"/>

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textColor="#242A37"
                                    android:textSize="@dimen/_20sdp"
                                    android:gravity="center_horizontal"
                                    android:maxLines="1"
                                    android:fontFamily="@font/sf_semibold"
                                    android:ellipsize="end"
                                    android:text="John Doe"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="@drawable/circle_corner_white_filled_grey_border"
                                    android:padding="@dimen/_4sdp"
                                    android:text="Present"
                                    android:textColor="#242A37"
                                    android:gravity="center_horizontal"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginRight="@dimen/_4sdp"
                                    android:layout_marginLeft="@dimen/_4sdp"
                                    android:textSize="@dimen/_20sdp"
                                    android:fontFamily="@font/sf_semibold"/>
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="@drawable/circle_corner_white_filled_grey_border"
                                    android:padding="@dimen/_4sdp"
                                    android:text="Present"
                                    android:textColor="#242A37"
                                    android:gravity="center_horizontal"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginRight="@dimen/_4sdp"
                                    android:layout_marginLeft="@dimen/_4sdp"
                                    android:textSize="@dimen/_20sdp"
                                    android:fontFamily="@font/sf_semibold"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/_60sdp"
                                    android:layout_weight="1"
                                    android:src="@drawable/bus_front_black_cricled"
                                    android:layout_gravity="center_horizontal"/>

                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/_60sdp"
                                    android:layout_weight="1"
                                    android:src="@drawable/bus_front_black_cricled"
                                    android:layout_gravity="center_horizontal"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textColor="#242A37"
                                    android:textSize="@dimen/_18sdp"
                                    android:fontFamily="@font/sf_medium"
                                    android:textStyle="bold"
                                    android:gravity="center_horizontal"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:text="Start Ride"/>

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textColor="#242A37"
                                    android:textSize="@dimen/_18sdp"
                                    android:gravity="center_horizontal"
                                    android:maxLines="1"
                                    android:fontFamily="@font/sf_medium"
                                    android:textStyle="bold"
                                    android:ellipsize="end"
                                    android:text="End Ride"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginRight="@dimen/_4sdp"
                                    android:textColor="#242E42"
                                    android:textSize="@dimen/_13sdp"
                                    android:fontFamily="@font/sf_medium"
                                    android:gravity="center_horizontal"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:text="ABC complex, Sion"/>

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textColor="#242E42"
                                    android:textSize="@dimen/_13sdp"
                                    android:gravity="center_horizontal"
                                    android:maxLines="1"
                                    android:fontFamily="@font/sf_medium"
                                    android:ellipsize="end"
                                    android:text="MIDC Andheri East"/>
                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/navRequestHoliday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:src="@drawable/user_cancel" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_medium"
                        android:text="@string/request_holiday"
                        android:textColor="#242E42"
                        android:textSize="@dimen/_17sdp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/navCalendar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:src="@drawable/ic_calendar" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_medium"
                        android:text="@string/calendar"
                        android:textColor="#242E42"
                        android:textSize="@dimen/_17sdp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/navNotification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:src="@drawable/ic_bell_yellow" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_medium"
                        android:text="@string/notifications"
                        android:textColor="#242E42"
                        android:textSize="@dimen/_17sdp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/navMyWallet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:src="@drawable/ic_wallet_yellow" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_medium"
                        android:text="@string/my_wallet"
                        android:textColor="#242E42"
                        android:textSize="@dimen/_17sdp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/navReferEarn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:src="@drawable/ic_user_add" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_medium"
                        android:text="@string/refer_earn"
                        android:textColor="#242E42"
                        android:textSize="@dimen/_17sdp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/navRouteMaps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:src="@drawable/ic_route_map" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_medium"
                        android:text="@string/route_maps"
                        android:textColor="#242E42"
                        android:textSize="@dimen/_17sdp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/navSettings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:src="@drawable/ic_settings" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_medium"
                        android:text="@string/settings"
                        android:textColor="#242E42"
                        android:textSize="@dimen/_17sdp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/navHelp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:src="@drawable/ic_help_yellow" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_medium"
                        android:text="@string/help"
                        android:textColor="#242E42"
                        android:textSize="@dimen/_17sdp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/navLogout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:src="@drawable/ic_logout" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_medium"
                        android:text="@string/logout"
                        android:textColor="#242E42"
                        android:textSize="@dimen/_17sdp" />
                </LinearLayout>


            </LinearLayout>
        </ScrollView>

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>
